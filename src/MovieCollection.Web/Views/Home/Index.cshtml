<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        @using (Html.BeginForm())
        {
            <div class="form-group row vertical-center">
                @Html.TextBoxFor(model => model.searchModel.Title, new { @class = "form-control input-lg", @placeholder = "Movie Name...", @id = "searchTitleId" })
                @Html.ValidationMessageFor(model => model.searchModel.Title)  
                <input type="button" value="Search" class="btn btn-secondary center-block" />
            </div>
        }
    </div>    
</div>

<div class="row">
    @if (Model.searchMovieModel != null)
    {
        foreach (var item in Model.searchMovieModel)
        {
            <div class="col-md-4">
                <ul class="list-unstyled">
                    <li style="text-align:center">@item.Title</li>
                    <li style="text-align: center">
                        @if (item.ImageUrl != "http://image.tmdb.org/t/p/w185/")
                        {
                            <img src="@item.ImageUrl" />
                        }
                        else
                        {
                            <img src="~/Images/No-Image.png" />
                        }
                    </li>
                </ul>
            </div>
        }
    }
</div>

<div class="row">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/Images/No-Image.png" alt="No image">
            </div>
        </div>
        @if (Model.popularMovieModel != null)
        {
            foreach (var item in Model.popularMovieModel)
            {
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="@item.ImageUrl" alt="@item.Title">
                    </div>
                </div>
            }
        }
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/Images/No-Image.png" alt="Image">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>