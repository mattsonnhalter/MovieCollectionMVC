@model IList<MovieCollection.Web.Viewmodels.MovieIndexViewmodel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<form method="post">
    <div class="form-group">
        <label for="movieSearch">Name:</label>
        <input type="text" class="form-control" id="movieSearch">
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</form>

<ul>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <li>@item.Id</li>
            <li>@item.Title</li>
            <li>@item.ReleaseDate</li>
            <li>@item.ImageUrl</li>
        }
    }
</ul>